{
  "name": "spark",
  "version": "1.0.0",
  "type": "module",
  "description": "a simple blog app",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index",
    "devcss": "postcss public/styles/tailwind.css -o public/styles/main.css -w",
    "buildcss": "npx tailwindcss -i ./public/styles/tailwind.css -o ./public/stylesheets/main.css --minify",
    "start": "nodemon --watch views --exec 'npm run devcss'"
  },
  "keywords": [
    "blog",
    "spark"
  ],
  "author": "Abhinav Yadav",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.9",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  }
}
